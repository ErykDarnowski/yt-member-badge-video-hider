{
  "manifest_version": 3,
  "name": "YouTube Supporter Badge Filter",
  "version": "1.0",
  "author": "Eryk Darnowski",
  "description": "Automatically hides videos with active supporter badges on YouTube channel pages.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Toggle YouTube Supporter Badge Filter"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}